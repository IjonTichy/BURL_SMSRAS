        TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_SpawnItemEx("StarSparkle",0,0,random(4,52),random(-2,2),random(-2,2),random(1,3),48,128)
        TNT1 A 0 A_GiveInventory("DukeJetpackFuel",100)
        TNT1 A 1 A_GiveInventory("DukePortJetpack",1)
        stop

      PickupFail:
        TNT1 A 0
        fail
    }
}

actor MarathonUniqueSpawner : CustomInventory
{
    -INVENTORY.ALWAYSPICKUP
    -COUNTITEM
    +DONTGIB
    Inventory.PickUpSound "marathon/itemget"
    Inventory.PickupMessage "You got theeeeeeee the the th"
    Scale 0.35
    States
    {
      Spawn:
        AWPN A -1
        stop

      Pickup:
        TNT1 A 0 A_JumpIfInventory("Alien Weapon",1,"PickupFailCheck")
        TNT1 A 0 ACS_ExecuteAlways(212,0,78)//A_Print("You got annaaNNAaN SYSTEM ERROR 0xfded")
        TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_SpawnItemEx("StarSparkle",0,0,random(4,52),random(-2,2),random(-2,2),random(1,3),48,128)
        TNT1 A 0 A_SetBlend("Green",0.4,4)
        TNT1 A 1 A_GiveInventory("UnknownAmmo",100)
        TNT1 A 1 A_GiveInventory("Alien Weapon")
        stop

      PickupFailCheck:
        TNT1 A 0 A_JumpIfInventory("UnknownAmmo",0,"PickupFail")
        TNT1 A 0 A_SetBlend("Green",0.4,4)
        TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_SpawnItemEx("StarSparkle",0,0,random(4,52),random(-2,2),random(-2,2),random(1,3),48,128)
        TNT1 A 1 A_GiveInventory("UnknownAmmo",100)
        stop

      PickupFail:
        TNT1 A 0
        fail
    }
}

actor MarathonUniqueSpawner2 : CustomInventory
{
    -INVENTORY.ALWAYSPICKUP
    -COUNTITEM
    +DONTGIB
    Inventory.PickUpSound "marathon/itemget"
    Inventory.PickupMessage "You got theeeeeeee the the th"
    Scale 0.35
    States
    {
      Spawn:
        AWPN B -1
        stop

      Pickup:
        TNT1 A 0 A_JumpIfInventory(" Alien Weapon ",1,"PickupFailCheck")
        TNT1 A 0 ACS_ExecuteAlways(212,0,78)//A_Print("You got annaaNNAaN SYSTEM ERROR 0xfded")
        TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_SpawnItemEx("StarSparkle",0,0,random(4,52),random(-2,2),random(-2,2),random(1,3),48,128)
        TNT1 A 0 A_SetBlend("Green",0.4,4)
        TNT1 A 1 A_GiveInventory("UnknownAmmo2",100)
        TNT1 A 1 A_GiveInventory(" Alien Weapon ")
        stop

      PickupFailCheck:
        TNT1 A 0 A_JumpIfInventory("UnknownAmmo2",0,"PickupFail")
        TNT1 A 0 A_SetBlend("Green",0.4,4)
        TNT1 AAAAAAAAAAAAAAAAAAAAAA 0 A_SpawnItemEx("StarSparkle",0,0,random(4,52),random(-2,2),random(-2,2),random(1,3),48,128)
        TNT1 A 1 A_GiveInventory("UnknownAmmo2",100)
        stop

      PickupFail:
        TNT1 A 0
        fail
    }
}
