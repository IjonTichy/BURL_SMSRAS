{
    +CLIENTSIDEONLY
    +PUFFONACTORS
    //+NOBLOOD
	+NOEXTREMEDEATH
	Scale 0.25
    //ActiveSound "marathon/fist/hit"
    AttackSound "marathon/knife/wall"
