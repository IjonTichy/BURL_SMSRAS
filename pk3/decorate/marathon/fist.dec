    DamageType "Pistol"
    States
    {
	  Crash:
        MPFF ABCDEFG 2 Bright
        stop
		
      Melee:
      Spawn:
        TNT1 A 1 //A_PlaySound("marathon/fist/hit")
        Stop
    }
}
