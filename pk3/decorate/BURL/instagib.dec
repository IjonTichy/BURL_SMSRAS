actor "FUCK YOURSELF": Weapon
{
    Weapon.Selectionorder 100
    Weapon.Kickback 100
    Weapon.SlotNumber 0

    +INVENTORY.UNDROPPABLE
	+WEAPON.NOAUTOAIM

    Inventory.Pickupmessage "\cgFUCK YOURSELF"
    Obituary "%k \cdrailed\c- %o\cd."

    States
    {
      Select:
        TNT1 AAAAAAAAAAAAAAAAAAAA 0 A_Raise
        TNT1 A 1 A_Raise
        loop

      Deselect:
        TNT1 AAAAAAAAAAAAAAAAAAAA 0 A_Lower
        TNT1 A 1 A_Lower
        loop

      Ready:
        TNT1 A 1 A_WeaponReady
        loop

      Fire:
        BEST A 2
        BEST B 2 A_PlaySound("BURL/FUCKYOURSELF", 1)
        BEST C 2 A_AlertMonsters
        BEST D 0 ACS_ExecuteWithResult(528)
        BEST D 15
        BEST CBA 5
        TNT1 A 5
        Goto Ready
    }
}

actor NoInteractionOn: Trigger
{
    States { Pickup: TNT1 A 0 A_ChangeFlag("NOINTERACTION", 1) stop }
}

actor FartExhaust: Trigger
{
    States { Pickup: TNT1 A 0 A_SpawnItemEx("LolExhaust",0,0,0, random(0,4),0,random(-4,0), random(0,360)) stop }
}

actor Exploder: Trigger
{
    States { Pickup: TNT1 A 0 A_Explode(256, 256) TNT1 A 0 A_SpawnItemEx("Derpsplosion") stop }
}

actor LolExhaust
{
    +NOINTERACTION
    +CLIENTSIDEONLY
    +FORCEXYBILLBOARD
    
    RenderStyle Add

    Height 0
    Radius 0
    
    States
    {
      Spawn:
        BAL1 CDE 4 bright
        stop
    }
}

actor Derpsplosion
{
    +NOINTERACTION
    +CLIENTSIDEONLY
    +FORCEXYBILLBOARD
    
    RenderStyle Add
    Scale 6
    
    States
    {
      Spawn:
        MISL B 0 bright
        MISL B 8 bright A_PlaySound("doomguy/rocklx", CHAN_BODY, 1.0, 0, ATTN_NONE)
        MISL C 6 bright
        MISL D 4 bright
        stop
    }
}



